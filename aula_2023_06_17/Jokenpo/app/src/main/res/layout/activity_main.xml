<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:background="#DAD9D9">

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" tools:srcCompat="@tools:sample/avatars" android:id="@+id/imgMaquina"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.498" app:layout_constraintBottom_toBottomOf="@+id/linearLayout"
            app:layout_constraintVertical_bias="0.157"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="361dp"
            android:layout_height="114dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/linearLayout" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.837">
        <ImageButton
                android:layout_width="108dp"
                android:layout_height="wrap_content" app:srcCompat="@drawable/papel" android:id="@+id/btn_papel"
                android:layout_weight="1" android:contentDescription="Papel"/>
        <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:srcCompat="@drawable/pedra" android:id="@+id/btn_pedra"
                android:layout_weight="1" android:contentDescription="Pedra"/>
        <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:srcCompat="@drawable/tesoura" android:id="@+id/btn_tesoura"
                android:layout_weight="1" android:contentDescription="Tesoura"/>
    </LinearLayout>
    <TextView
            android:layout_width="267dp"
            android:layout_height="74dp" android:id="@+id/txt_resultado"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            android:textAlignment="center"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.635" android:textStyle="bold"/>
    <TextView
            android:text="Jogada da MÃ¡quina"
            android:layout_width="287dp"
            android:layout_height="39dp" android:id="@+id/textView3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:textAlignment="center"
            android:fontFamily="monospace" android:textColor="#000000" android:textSize="20sp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="@+id/linearLayout"
            app:layout_constraintVertical_bias="0.368" android:textStyle="bold"/>

</androidx.constraintlayout.widget.ConstraintLayout>